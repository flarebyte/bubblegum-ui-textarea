{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/CodeBase",
    "definitions": {
      "CodeBase": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "files": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/File"
            }
          }
        },
        "required": ["files"],
        "title": "Description of the code base source files"
      },
      "File": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "filename": {
            "type": "string",
            "description": "Relative path to the file"
          },
          "description": {
            "type": "string",
            "description": "A description for the file"
          },
          "generator": {
            "type": "string",
            "description": "The generator producing the file",
            "enum": ["baldrick-elm", "script/normalize.sh", "script/generate.sh", "elm"]
          },
          "homepage": {
              "type": "string",
              "description": "An URL to the homepage about the file",
              "format": "uri"
            },
          "editable": {
            "type": "boolean",
            "description": "Whether the file can be manually edited",
            "default": false
          }
        },
        "required": ["description", "filename"],
        "title": "File",
        "description": "The file to describe"
      }
    }
  }
  